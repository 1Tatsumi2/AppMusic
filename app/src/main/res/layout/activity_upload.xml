<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_color"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Music"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="30sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/uploadImage"
                android:layout_marginTop="15dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_width="1dp"
                android:layout_gravity="center"
                android:src="@drawable/img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center"
                android:id="@+id/file"/>

            <EditText
                android:id="@+id/uploadTextImageUrl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="start|center_vertical"
                android:hint="Enter URL Image"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnLoadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Load Image" />

            <SeekBar
                android:id="@+id/seekBarTime"
                android:layout_marginTop="30dp"
                android:progressTint="#fff"
                android:progress="40"
                android:layout_gravity="center"
                android:backgroundTint="#fff"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/manageTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="00:00"/>
                <TextView
                    android:id="@+id/manageDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:text="00:00"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btnLoadMP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Load MP3" />

            <EditText
                android:id="@+id/uploadMp3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_light_background"
                android:gravity="start|center_vertical"
                android:hint="Enter MP3 song"
                android:padding="16dp"
                android:textColor="@color/lavender"
                android:textSize="16sp" />
            <VideoView
                android:id="@+id/uploadVideo"
                android:layout_width="250dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_height="250dp"/>
            <Button
                android:id="@+id/btnLoadVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Load Video" />
            <EditText
                android:id="@+id/uploadMP4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_light_background"
                android:gravity="start|center_vertical"
                android:hint="Enter MP4 song"
                android:padding="16dp"
                android:textColor="@color/lavender"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/uploadName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_light_background"
                android:gravity="start|center_vertical"
                android:hint="Enter song name"
                android:padding="16dp"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/uploadArtist"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_light_background"
                android:gravity="start|center_vertical"
                android:hint="Enter artist"
                android:padding="16dp"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/uploadSinger"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_light_background"
                android:gravity="start|center_vertical"
                android:hint="Enter singer"
                android:padding="16dp"
                android:textColor="@color/lavender"
                android:textSize="16sp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Save"
                android:textSize="18sp"
                android:backgroundTint="@color/lavender"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
