<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- Hình ảnh của playlist -->
    <ImageView
        android:id="@+id/imagePlaylist"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/playlist_placeholder" />

    <!-- Thông tin về playlist -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/namePlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Playlist"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/authorPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tác giả"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/songPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng bài hát"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
